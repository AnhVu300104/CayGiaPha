@model IEnumerable<CayGiaPha.Models.People>

@{
    ViewData["Title"] = "Quản lý Thành viên";
}

<div class="fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">
                <i class="fas fa-users me-2 text-primary"></i>
                Quản lý Thành viên
            </h2>
            <p class="text-secondary mt-1">Danh sách tất cả thành viên trong gia đình</p>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>
                Thêm thành viên mới
            </a>
        }
    </div>

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-8">
                    <label for="searchString" class="form-label fw-bold">
                        <i class="fas fa-search me-2"></i>
                        Tìm kiếm theo tên:
                    </label>
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Nhập tên cần tìm..." />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-secondary me-2">
                        <i class="fas fa-search me-2"></i>
                        Tìm kiếm
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>
                        Xóa bộ lọc
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- People Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>
                Danh sách thành viên (@Model.Count())
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0">
                                    <i class="fas fa-user me-2"></i>
                                    Họ và tên
                                </th>
                                <th class="border-0">
                                    <i class="fas fa-venus-mars me-2"></i>
                                    Giới tính
                                </th>
                                <th class="border-0">
                                    <i class="fas fa-birthday-cake me-2"></i>
                                    Ngày sinh
                                </th>
                                <th class="border-0">
                                    <i class="fas fa-home me-2"></i>
                                    Gia đình
                                </th>
                                <th class="border-0 text-center">
                                    <i class="fas fa-cogs me-2"></i>
                                    Thao tác
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-bold">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @if (item.Gender == "Nam")
                                        {
                                            <span class="badge bg-primary">
                                                <i class="fas fa-mars me-1"></i>
                                                @Html.DisplayFor(modelItem => item.Gender)
                                            </span>
                                        }
                                        else if (item.Gender == "Nữ")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-venus me-1"></i>
                                                @Html.DisplayFor(modelItem => item.Gender)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                @Html.DisplayFor(modelItem => item.Gender)
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Birthday.HasValue)
                                        {
                                            <span title="@item.Birthday.Value.ToString("dd/MM/yyyy")">
                                                @item.Birthday.Value.ToString("dd/MM/yyyy")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa cập nhật</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Family != null)
                                        {
                                            <span class="badge bg-info">
                                                @Html.DisplayFor(modelItem => item.Family.Name)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa xác định</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.PersonalID" class="btn btn-sm btn-outline-info" title="Xem chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.PersonalID" class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.PersonalID" class="btn btn-sm btn-outline-danger" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">Không có thành viên nào</h4>
                    <p class="text-secondary">Chưa có thành viên nào được thêm vào hệ thống.</p>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>
                            Thêm thành viên đầu tiên
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>
